      <!-- custom js -->
      {% block cjs %} {% endblock %}

        <script type="text/javascript">
        
        function goBack() {
          window.history.back();
        }    
        
        $(function () {

          $( "#responsiveMenu" ).click(function() {
            $( "#responsiveDropDownMenu" ).animate({
              opacity: 1,
              left: "+=50",
              height: "toggle"
            }, 500);
          })

          $(window).on('resize', function () {
            if ($(window).width() >= 992) {
              $('#responsiveDropDownMenu').css('display', 'block');
            }

            if ($(window).width() < 992) {
              $('#responsiveDropDownMenu').css('display', 'none');
            }              
          })
        })
        </script>
